// For format details, see https://aka.ms/vscode-remote/devcontainer.json
{
    "dockerComposeFile": [
        "docker-compose.yaml"
    ],
    "workspaceFolder": "/workspace",
    "service": "vscode",
    "name": "Rust",
    "remoteUser": "vscode",
    "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
    },
    "extensions": [
        "ms-azuretools.vscode-docker",
        "rust-lang.rust",
        "bungcip.better-toml",
        "vadimcn.vscode-lldb",
    ]
}